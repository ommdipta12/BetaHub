{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Database": "Server=DESKTOP-PN43OA8;Database=BetaHub;User Id=sa;Password=serverAccess#400;TrustServerCertificate=True;"
  },
  "DatabaseOptions": {
    "MaxRetryCount": 3,
    "CommandTimeout": 30,
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:dd-MMM-yyyy HH:mm:ss.fff zzz}] [{Level}] {Message:lj}{NewLine}{Exception}{NewLine}------------------------------{NewLine}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "BetaHub"
    }
  },
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "sql-server",
        "Uri": "/api/_healthz"
      }
    ],
    "EvaluationTimeInSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60,
    "MaximumHistoryEntriesPerEndpoint": 50
  }
}
